<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructor Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Include your CSS file -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body{
            background: linear-gradient(135deg, #89f7fe 0%, #66a6ff 100%);
        }
        h1, h2 {
            color: #343a40; /* Dark color for headings */
        }
        .card {
            transition: transform 0.3s, box-shadow 0.3s; /* Smooth transitions */
            border: none; /* No border */
            border-radius: 15px; /* Rounded corners */
        }
        .card:hover {
            transform: translateY(-5px); /* Lift effect on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Shadow effect */
        }
        .card-img-top {
            border-top-left-radius: 15px; /* Rounded top corners */
            border-top-right-radius: 15px; /* Rounded top corners */
            height: 200px; /* Fixed height for images */
            object-fit: cover; /* Maintain aspect ratio */
        }
        .btn-success {
            border-radius: 25px; /* Rounded edges for buttons */
        }
        .btn-primary {
            border-radius: 25px; /* Rounded edges for buttons */
        }
        .mb-4 {
            margin-bottom: 20px; /* Consistent spacing */
        }
        .float-right {
            float: right; /* Align button to the right */
        }
    </style>
</head>
<body>
    
    <%- include('../partials/header'); %>
    <!-- Flash message container -->
    <% if (error_msg != '' ) { %>
        <div id="flash-message" class="alert alert-danger">
            <%= error_msg %> 
        </div>
    <% } %>
    <% if (success_msg != '' ) { %>
        <div id="flash-message" class="alert alert-success">
            <%= success_msg %>
        </div>
    <% } %>

    <div class="container mt-5">
        <% if (user) { %>
            <h1>Welcome, <%= user.name.charAt(0).toUpperCase() + user.name.slice(1) %></h1>
        <% } else { %>
            <h1>Welcome, Instructor</h1>
        <% } %>
        <hr>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Your Courses</h2>
            <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        </div>

        <div class="row">
            <% instructorCourses.forEach(course => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm"> <!-- Added shadow class for depth -->
                        <a href="../lessons/<%= course.id%>">
                            <img src="/uploads/<%= course.image_url.split('/').pop() %>" class="card-img-top img-responsive" alt="<%= course.title %>">
                        </a>
                            <div class="card-body">
                            <h5 class="card-title"><%= course.title %></h5>
                            <p class="card-text"><%= course.description.slice(0,35) + "..." %></p>
                            <p class="card-text"><small class="text-muted">Enrolled Students: <%= course.student_count %></small></p>
                            <a href="/courses/edit/<%= course.id %>" class="btn btn-primary">Edit</a>
                            <a href="/courses/delete/<%= course.id %>" class="btn btn-primary">Delete</a>
                            <a href="/lessons/<%= course.id %>/add-lesson" class="btn btn-primary">Add lessons</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <script>
        // Hide flash message after 2 seconds (2000ms)
        setTimeout(function() {
            var flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                flashMessage.style.display = 'none';
            }
        }, 8000);  // 2000ms = 2 seconds
    </script>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
